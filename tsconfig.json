{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

    "declaration": true
  },
  "exclude": ["src/index.test.ts", "dist"]
}
